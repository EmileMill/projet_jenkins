}

function sub_author($form, $form_state){

	$values      	= $form_state->getUserInput();
	$utilisateur 	= $values['uid'][0]['target_id'];
	$author 	 	= trim(explode('(',$utilisateur)[0]);
	$form_state->setValue('title',[['value'=>$author]]);
}


